<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff82f8ff">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Sensor Data"
        android:onClick="startLis"
        android:id="@+id/Request"
        android:layout_below="@+id/SensorR"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="119dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IP"
        android:hint="IP Address"
        android:layout_alignParentTop="true"
        android:layout_marginTop="43dp"
        android:layout_alignRight="@+id/Request"
        android:layout_alignEnd="@+id/Request"
        android:layout_alignLeft="@+id/SensorR"
        android:layout_alignStart="@+id/SensorR"
        android:imeOptions="actionDone"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SensorR"
        android:hint="Sensor Request"
        android:layout_below="@+id/IP"
        android:layout_alignLeft="@+id/Request"
        android:layout_alignStart="@+id/Request"
        android:layout_marginTop="45dp"
        android:layout_alignRight="@+id/Request"
        android:layout_alignEnd="@+id/Request"
        android:imeOptions="actionDone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting For Sensor Data From Server"
        android:id="@+id/label"
        android:layout_below="@+id/SensorR"
        android:layout_alignLeft="@+id/Request"
        android:layout_alignStart="@+id/Request"
        android:layout_marginTop="51dp" />

</RelativeLayout>
